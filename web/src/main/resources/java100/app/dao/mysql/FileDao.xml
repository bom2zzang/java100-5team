<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="java100.app.dao.FileDao">
	<select id="findByBookNo" resultType="uploadFile"
		parameterType="int">
		select no, filename
		from ex_photo
		where bno=#{value}
	</select>

	<insert id="insert" parameterType="uploadFile">
		insert into
		ex_photo(filename,bno)
		values(#{filename}, #{bookNo})
	</insert>

	<delete id="deleteAllByBookNo" parameterType="int">
		delete from
		ex_photo
		where bno=#{value}
	</delete>
</mapper>
